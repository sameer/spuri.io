{{ define "head" }}{{ end }}
{{ define "title" }}My Blog{{ end }}
{{ define "content" }}
{{ if .Index  }}
	<h2>Recent Posts</h2>
	{{ range $i := .Index }}
		<span><h3><a href="/blog/{{ $i.Checksum }}">{{ $i.Title }}</a> {{ ($i.Modified.Format "2006-01-02") }}</h3></span>
		<br>
	{{ end }}
{{ end }}
{{ if not .Index }}
	<h2> I haven't posted anything yet. Come check back later!</h2>
{{ end }}

{{ end }}
